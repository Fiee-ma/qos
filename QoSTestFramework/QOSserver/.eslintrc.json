{
    "parserOptions": {
      "ecmaVersion": 2017,
      "sourceType": "module"
    },
    "rules": {
      "no-trailing-spaces": "error",
      "no-mixed-spaces-and-tabs": "error",
      "max-len": ["warn", {
        "ignoreTrailingComments": true,
        "ignoreComments": true
      }],
      "indent": ["error", 2, {
        "SwitchCase": 1
      }],
      "eol-last": "error",
      "spaced-comment": ["warn", "always"],
      "space-before-blocks": ["error", "always"],
      "space-infix-ops": "error"
    }
  }